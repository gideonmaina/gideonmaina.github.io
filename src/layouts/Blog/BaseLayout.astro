---
import SEO_Meta from "../../components/SEO_Meta.astro";
import Navbar from "../../components/Navbar.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro"; // replace with relative component path
const currentPath = Astro.url.pathname;
const { frontmatter } = Astro.props;
const updated_date = new Date(frontmatter.created);
const updated_date_fmt = `${updated_date.toLocaleString("default", {
  month: "long",
})} ${updated_date.getDay()}, ${updated_date.getFullYear()}`;
---

<html>
  <head>
    <SEO_Meta frontmatter={frontmatter} />

    <title>{frontmatter.title}</title>
  </head>

  <body>
    <Navbar />
    <main>
      <Breadcrumbs currentPath={currentPath} />
      <div>
        <span> ðŸ•™ Updated {updated_date_fmt}</span>
      </div>
      <slot />
    </main>
    <style lang="scss" is:global>
      /* @import url("https://fonts.googleapis.com/css2?family=Bodoni+Moda:ital,wght@0,400;0,600;1,400;1,500;1,600&family=Lato&family=Montserrat:wght@300;400;500&family=Open+Sans&family=Poppins:ital,wght@0,300;0,400;0,500;1,400;1,500&family=Roboto:wght@300;400&display=swap"); */
      @import url("https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Lato:ital,wght@0,400;0,700;1,400;1,700&family=Libre+Bodoni:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&family=Montserrat:ital,wght@0,400;0,500;0,600;1,400;1,500;1,600&family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&family=Roboto:ital,wght@0,300;0,400;0,500;0,700;0,900;1,300;1,400;1,500;1,700;1,900&display=swap");

      /* font-family: 'Lato', sans-serif;
font-family: 'Libre Bodoni', serif;
font-family: 'Montserrat', sans-serif;
font-family: 'Open Sans', sans-serif;
font-family: 'Roboto', sans-serif; */

      body {
        color: rgb(23, 23, 23);
        font-weight: 500;
        font-family:
          "Inter",
          "Open Sans",
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          Roboto,
          Oxygen,
          Ubuntu,
          Cantarell,
          "Open Sans",
          "Helvetica Neue",
          sans-serif;
      }

      main {
        width: 70%;
        margin: 0 auto;
        padding: 4px 8px;

        p {
          font-size: 1.2rem;
          line-height: 1.5;
          letter-spacing: 0.8px;
          font-weight: 400;
        }
      }

      @media screen and (max-width: 600px) {
        main {
          width: 90%;
          padding: 8px;
        }
      }
    </style>
  </body>
</html>
