<script>
  document.addEventListener("DOMContentLoaded", function () {
    const mainNav = document.getElementById("main-nav") as HTMLElement;
    const mobileMenuButton = document.getElementById(
      "mobile-menu-button",
    ) as HTMLElement;
    const mobileMenu = document.getElementById("mobile-menu") as HTMLElement;
    const mobileMenuClose = document.getElementById(
      "mobile-menu-close",
    ) as HTMLElement;
    const menuIcon = document.getElementById("menu-icon") as HTMLElement;
    const closeIcon = document.getElementById("close-icon") as HTMLElement;
    const backdrop = mobileMenu?.querySelector(
      ".absolute.inset-0.bg-black\\/80",
    ) as HTMLElement;

    let lastScrollY = window.scrollY;
    let scrollThreshold = 100;
    let isScrollingDown = false;
    let isMobileMenuOpen = false;

    // Scroll handler for main nav visibility
    function handleScroll() {
      const currentScrollY = window.scrollY;

      // Don't hide nav when mobile menu is open
      if (isMobileMenuOpen) return;

      // Determine scroll direction only if we've moved significantly
      if (Math.abs(currentScrollY - lastScrollY) > 5) {
        if (currentScrollY > lastScrollY) {
          isScrollingDown = true;
        } else {
          isScrollingDown = false;
        }
      }

      // Handle main navigation visibility based on scroll direction
      if (currentScrollY <= scrollThreshold) {
        // At top of page - always show main nav
        if (mainNav) {
          mainNav.style.transform = "translateY(0)";
          mainNav.style.opacity = "1";
        }
      } else {
        // Past threshold - control based on scroll direction
        if (isScrollingDown) {
          // Scrolling down - hide main nav
          if (mainNav) {
            mainNav.style.transform = "translateY(-100%)";
            mainNav.style.opacity = "0.95";
          }
        } else {
          // Scrolling up - show main nav
          if (mainNav) {
            mainNav.style.transform = "translateY(0)";
            mainNav.style.opacity = "1";
          }
        }
      }

      lastScrollY = Math.max(0, currentScrollY); // Prevent negative scroll values
    }

    // Open mobile menu
    function openMobileMenu() {
      if (mobileMenu && menuIcon && closeIcon && backdrop) {
        isMobileMenuOpen = true;

        // Make menu visible and show the menu container
        mobileMenu.classList.remove(
          "opacity-0",
          "invisible",
          "translate-x-full",
        );
        mobileMenu.classList.add("opacity-100", "visible", "translate-x-0");

        // Show backdrop
        backdrop.classList.remove("opacity-0");
        backdrop.classList.add("opacity-100");

        // Switch icons
        menuIcon.classList.add("hidden", "rotate-180");
        closeIcon.classList.remove("hidden");
        closeIcon.classList.add("rotate-0");

        // Prevent body scroll
        document.body.style.overflow = "hidden";

        // Update button aria-expanded
        mobileMenuButton.setAttribute("aria-expanded", "true");

        // Trigger AOS animations
        setTimeout(() => {
          if ((window as any).AOS) {
            (window as any).AOS.refresh();
          }
        }, 100);
      }
    }

    // Close mobile menu
    function closeMobileMenu() {
      if (mobileMenu && menuIcon && closeIcon && backdrop) {
        isMobileMenuOpen = false;

        // Hide the menu container
        mobileMenu.classList.remove("translate-x-0");
        mobileMenu.classList.add("translate-x-full");

        // Hide backdrop
        backdrop.classList.remove("opacity-100");
        backdrop.classList.add("opacity-0");

        // Switch icons
        closeIcon.classList.add("hidden", "rotate-180");
        menuIcon.classList.remove("hidden", "rotate-180");
        menuIcon.classList.add("rotate-0");

        // Restore body scroll
        document.body.style.overflow = "";

        // Update button aria-expanded
        mobileMenuButton.setAttribute("aria-expanded", "false");

        // After transition completes, make completely invisible
        setTimeout(() => {
          if (!isMobileMenuOpen && mobileMenu) {
            mobileMenu.classList.add("opacity-0", "invisible");
            mobileMenu.classList.remove("opacity-100", "visible");
          }
        }, 700); // Match the transition duration
      }
    }

    // Toggle mobile menu
    function toggleMobileMenu() {
      if (isMobileMenuOpen) {
        closeMobileMenu();
      } else {
        openMobileMenu();
      }
    }

    // Event listeners
    window.addEventListener("scroll", handleScroll, { passive: true });

    if (mobileMenuButton) {
      mobileMenuButton.addEventListener("click", toggleMobileMenu);
    }

    if (mobileMenuClose) {
      mobileMenuClose.addEventListener("click", closeMobileMenu);
    }

    // Close mobile menu when clicking backdrop
    if (backdrop) {
      backdrop.addEventListener("click", closeMobileMenu);
    }

    // Close mobile menu when clicking navigation links
    const mobileNavLinks = mobileMenu?.querySelectorAll("a[href]");
    mobileNavLinks?.forEach((link) => {
      link.addEventListener("click", closeMobileMenu);
    });

    // Close mobile menu on window resize to desktop
    window.addEventListener("resize", function () {
      if (window.innerWidth >= 768 && isMobileMenuOpen) {
        closeMobileMenu();
      }
    });

    // Close mobile menu on escape key
    document.addEventListener("keydown", function (e) {
      if (e.key === "Escape" && isMobileMenuOpen) {
        closeMobileMenu();
      }
    });
  });
</script>
