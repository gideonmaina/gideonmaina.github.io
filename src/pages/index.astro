import Layout from "@layouts/Layout.astro";
import strapiAPI from "@lib/strapi.js";

export const prerender = false;

const title = "Home";

// Server-side data that will be rendered on each request for initial SSR
const currentYear = new Date().getFullYear();
const lastUpdated = new Date().toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});

// Fetch data for initial server render - this will be refreshed client-side
let recentPosts = [];
let featuredProjects = [];

// Only fetch on the server for initial render
try {
  const { posts } = await strapiAPI.getBlogPosts({
    pagination: { pageSize: 2 },
    sort: "publishedAt:desc",
  });
  recentPosts = posts.map((post: any) => strapiAPI.formatBlogPost(post));
  console.log(`Initially fetched ${recentPosts.length} recent blog posts`);
} catch (error) {
  console.error("Failed to fetch recent blog posts:", error);
}

// Fetch featured projects for initial render
try {
  const projects = await strapiAPI.getFeaturedProjects(3);
  featuredProjects = projects.map((project: any) =>
    strapiAPI.formatProject(project),
  );
  console.log(`Initially fetched ${featuredProjects.length} featured projects`);
} catch (error) {
  console.error("Failed to fetch featured projects:", error);
}
