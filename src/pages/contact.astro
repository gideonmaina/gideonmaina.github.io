---
import Layout from "@layouts/Layout.astro";
const title = "Contact";

export const prerender = true;
---

<Layout title={title}>
  <!-- Hero Section -->
  <section
    class="relative overflow-hidden bg-gradient-to-br from-gray-900 via-slate-900 to-black py-20"
  >
    <!-- Background Pattern -->
    <div
      class="absolute inset-0 bg-gradient-to-br from-indigo-900/20 via-purple-900/20 to-gray-900/20"
    >
      <div
        class="absolute inset-0"
        style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.05) 1px, transparent 0); background-size: 20px 20px;"
      >
      </div>
    </div>

    <!-- Background Animation -->
    <div class="absolute inset-0 opacity-20">
      <div
        class="absolute top-0 -left-4 w-72 h-72 bg-blue-500 rounded-full mix-blend-multiply filter blur-xl animate-pulse"
      >
      </div>
      <div
        class="absolute top-0 -right-4 w-72 h-72 bg-purple-500 rounded-full mix-blend-multiply filter blur-xl animate-pulse animation-delay-2000"
      >
      </div>
      <div
        class="absolute -bottom-8 left-20 w-72 h-72 bg-pink-500 rounded-full mix-blend-multiply filter blur-xl animate-pulse animation-delay-4000"
      >
      </div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <div class="mb-8" data-aos="fade-down" data-aos-duration="800">
          <span
            class="inline-block px-6 py-3 bg-gradient-to-r from-blue-500/20 to-purple-500/20 backdrop-blur-sm border border-blue-500/30 rounded-full text-blue-300 text-sm font-medium mb-8"
          >
            💬 Ready to collaborate
          </span>
        </div>

        <h1
          class="text-4xl sm:text-6xl lg:text-7xl font-black text-white mb-8 leading-tight"
          data-aos="fade-up"
          data-aos-duration="1000"
          data-aos-delay="200"
        >
          Let's <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 via-purple-500 to-pink-500"
            >Connect</span
          >
        </h1>
        <p
          class="text-xl sm:text-2xl text-gray-300 max-w-4xl mx-auto leading-relaxed"
          data-aos="fade-up"
          data-aos-delay="400"
          data-aos-duration="1000"
        >
          I'm always excited to discuss <span class="text-blue-400 font-medium"
            >IoT projects</span
          >,
          <span class="text-purple-400 font-medium"
            >electrical engineering solutions</span
          >,
          <span class="text-green-400 font-medium">sustainable technology</span
          >, or
          <span class="text-pink-400 font-medium"
            >web development opportunities</span
          >. Let's collaborate to create innovative solutions that make a
          positive impact.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Form & Info -->
  <section
    class="relative overflow-hidden bg-gradient-to-br from-slate-900 via-gray-900 to-black py-20"
  >
    <!-- Background Pattern -->
    <div
      class="absolute inset-0 bg-gradient-to-br from-indigo-900/10 via-purple-900/10 to-gray-900/10"
    >
      <div
        class="absolute inset-0"
        style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.03) 1px, transparent 0); background-size: 30px 30px;"
      >
      </div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- Contact Form -->
        <div
          data-aos="fade-right"
          data-aos-duration="1000"
          data-aos-delay="200"
        >
          <div
            class="bg-white/5 backdrop-blur-lg rounded-3xl p-8 border border-white/10 shadow-2xl"
          >
            <div class="mb-8">
              <h2 class="text-3xl font-bold text-white mb-4">
                Send me a message
              </h2>
              <p class="text-gray-400">
                Fill out the form below and I'll get back to you within 24
                hours.
              </p>
            </div>

            <form class="space-y-6" id="contact-form">
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <div
                  data-aos="fade-up"
                  data-aos-delay="300"
                  data-aos-duration="600"
                >
                  <label
                    for="firstName"
                    class="block text-sm font-semibold text-gray-300 mb-3"
                  >
                    First Name *
                  </label>
                  <input
                    type="text"
                    id="firstName"
                    name="firstName"
                    required
                    class="w-full px-4 py-4 bg-white/5 border border-white/20 rounded-xl text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500/50 backdrop-blur-sm transition-all duration-300"
                    placeholder="John"
                  />
                </div>
                <div
                  data-aos="fade-up"
                  data-aos-delay="350"
                  data-aos-duration="600"
                >
                  <label
                    for="lastName"
                    class="block text-sm font-semibold text-gray-300 mb-3"
                  >
                    Last Name *
                  </label>
                  <input
                    type="text"
                    id="lastName"
                    name="lastName"
                    required
                    class="w-full px-4 py-4 bg-white/5 border border-white/20 rounded-xl text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500/50 backdrop-blur-sm transition-all duration-300"
                    placeholder="Doe"
                  />
                </div>
              </div>

              <div
                data-aos="fade-up"
                data-aos-delay="400"
                data-aos-duration="600"
              >
                <label
                  for="email"
                  class="block text-sm font-semibold text-gray-300 mb-3"
                >
                  Email Address *
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-4 bg-white/5 border border-white/20 rounded-xl text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500/50 backdrop-blur-sm transition-all duration-300"
                  placeholder="john.doe@example.com"
                />
              </div>

              <div
                data-aos="fade-up"
                data-aos-delay="450"
                data-aos-duration="600"
              >
                <label
                  for="company"
                  class="block text-sm font-semibold text-gray-300 mb-3"
                >
                  Company/Organization
                </label>
                <input
                  type="text"
                  id="company"
                  name="company"
                  class="w-full px-4 py-4 bg-white/5 border border-white/20 rounded-xl text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500/50 backdrop-blur-sm transition-all duration-300"
                  placeholder="Your Company"
                />
              </div>

              <div
                data-aos="fade-up"
                data-aos-delay="500"
                data-aos-duration="600"
              >
                <label
                  for="subject"
                  class="block text-sm font-semibold text-gray-300 mb-3"
                >
                  Subject *
                </label>
                <select
                  id="subject"
                  name="subject"
                  required
                  class="w-full px-4 py-4 bg-white/5 border border-white/20 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500/50 backdrop-blur-sm transition-all duration-300"
                >
                  <option value="" class="bg-gray-800">Select a subject</option>
                  <option value="web-development" class="bg-gray-800"
                    >Web Development Project</option
                  >
                  <option value="iot-consulting" class="bg-gray-800"
                    >IoT Consulting</option
                  >
                  <option value="electrical-engineering" class="bg-gray-800"
                    >Electrical Engineering</option
                  >
                  <option value="collaboration" class="bg-gray-800"
                    >Collaboration Opportunity</option
                  >
                  <option value="employment" class="bg-gray-800"
                    >Employment Opportunity</option
                  >
                  <option value="other" class="bg-gray-800">Other</option>
                </select>
              </div>

              <div
                data-aos="fade-up"
                data-aos-delay="550"
                data-aos-duration="600"
              >
                <label
                  for="budget"
                  class="block text-sm font-semibold text-gray-300 mb-3"
                >
                  Project Budget (Optional)
                </label>
                <select
                  id="budget"
                  name="budget"
                  class="w-full px-4 py-4 bg-white/5 border border-white/20 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500/50 backdrop-blur-sm transition-all duration-300"
                >
                  <option value="" class="bg-gray-800"
                    >Select budget range</option
                  >
                  <option value="under-5k" class="bg-gray-800"
                    >Under $5,000</option
                  >
                  <option value="5k-15k" class="bg-gray-800"
                    >$5,000 - $15,000</option
                  >
                  <option value="15k-50k" class="bg-gray-800"
                    >$15,000 - $50,000</option
                  >
                  <option value="50k-plus" class="bg-gray-800">$50,000+</option>
                  <option value="discuss" class="bg-gray-800"
                    >Let's discuss</option
                  >
                </select>
              </div>

              <div
                data-aos="fade-up"
                data-aos-delay="600"
                data-aos-duration="600"
              >
                <label
                  for="message"
                  class="block text-sm font-semibold text-gray-300 mb-3"
                >
                  Message *
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="6"
                  required
                  class="w-full px-4 py-4 bg-white/5 border border-white/20 rounded-xl text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500/50 backdrop-blur-sm transition-all duration-300 resize-vertical"
                  placeholder="Tell me about your project, ideas, or how I can help you..."
                ></textarea>
              </div>

              <div
                class="flex items-center"
                data-aos="fade-up"
                data-aos-delay="650"
                data-aos-duration="600"
              >
                <input
                  type="checkbox"
                  id="newsletter"
                  name="newsletter"
                  class="w-4 h-4 text-blue-600 bg-white/10 border-white/20 rounded focus:ring-blue-500 focus:ring-2"
                />
                <label for="newsletter" class="ml-3 text-sm text-gray-300">
                  I'd like to receive updates about your latest projects and
                  blog posts
                </label>
              </div>

              <button
                type="submit"
                class="group w-full bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 text-white font-semibold py-4 px-8 rounded-xl transition-all duration-300 transform hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:ring-offset-2 focus:ring-offset-transparent shadow-xl hover:shadow-2xl hover:shadow-blue-500/25"
                data-aos="fade-up"
                data-aos-delay="700"
                data-aos-duration="600"
              >
                <span class="flex items-center justify-center">
                  Send Message
                  <svg
                    class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                  </svg>
                </span>
              </button>
            </form>

            <!-- Success/Error Messages -->
            <div id="form-message" class="mt-6 hidden">
              <div
                id="success-message"
                class="bg-gradient-to-r from-green-500/20 to-emerald-500/20 border border-green-500/30 backdrop-blur-sm text-green-300 p-6 rounded-xl hidden"
              >
                <div class="flex items-center">
                  <svg
                    class="w-6 h-6 mr-3 text-green-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <div>
                    <p class="font-semibold text-green-300">
                      Message sent successfully!
                    </p>
                    <p class="text-sm text-green-400">
                      Thank you for reaching out. I'll get back to you within 24
                      hours.
                    </p>
                  </div>
                </div>
              </div>
              <div
                id="error-message"
                class="bg-gradient-to-r from-red-500/20 to-pink-500/20 border border-red-500/30 backdrop-blur-sm text-red-300 p-6 rounded-xl hidden"
              >
                <div class="flex items-center">
                  <svg
                    class="w-6 h-6 mr-3 text-red-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                    ></path>
                  </svg>
                  <div>
                    <p class="font-semibold text-red-300">
                      Oops! Something went wrong.
                    </p>
                    <p class="text-sm text-red-400">
                      Please try again or contact me directly at
                      gmainapro@gmail.com
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Information -->
        <div data-aos="fade-left" data-aos-duration="1000" data-aos-delay="300">
          <div class="space-y-8">
            <!-- Contact Info -->
            <div
              class="bg-white/5 backdrop-blur-lg rounded-3xl p-8 border border-white/10 shadow-2xl"
            >
              <h2 class="text-3xl font-bold text-white mb-8">Get in touch</h2>
              <div class="space-y-6">
                <div
                  class="flex items-start space-x-4 group"
                  data-aos="fade-up"
                  data-aos-delay="400"
                  data-aos-duration="600"
                >
                  <div
                    class="w-14 h-14 bg-gradient-to-r from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform duration-300"
                  >
                    <svg
                      class="w-7 h-7 text-white"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"
                      ></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-white font-semibold text-lg">Email</h3>
                    <a
                      href="mailto:gmainapro@gmail.com"
                      class="text-blue-400 hover:text-blue-300 transition-colors font-medium"
                      >gmainapro@gmail.com</a
                    >
                    <p class="text-gray-400 text-sm mt-1">
                      I typically respond within 24 hours
                    </p>
                  </div>
                </div>

                <div
                  class="flex items-start space-x-4 group"
                  data-aos="fade-up"
                  data-aos-delay="450"
                  data-aos-duration="600"
                >
                  <div
                    class="w-14 h-14 bg-gradient-to-r from-green-500 to-green-600 rounded-2xl flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform duration-300"
                  >
                    <svg
                      class="w-7 h-7 text-white"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"
                      ></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-white font-semibold text-lg">Phone</h3>
                    <a
                      href="tel:+254758906353"
                      class="text-green-400 hover:text-green-300 transition-colors font-medium"
                      >+254 758 906 353</a
                    >
                    <p class="text-gray-400 text-sm mt-1">
                      Available Mon-Fri, 9AM-6PM EAT
                    </p>
                  </div>
                </div>

                <div
                  class="flex items-start space-x-4 group"
                  data-aos="fade-up"
                  data-aos-delay="500"
                  data-aos-duration="600"
                >
                  <div
                    class="w-14 h-14 bg-gradient-to-r from-purple-500 to-purple-600 rounded-2xl flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform duration-300"
                  >
                    <svg
                      class="w-7 h-7 text-white"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"
                      ></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-white font-semibold text-lg">Location</h3>
                    <p class="text-purple-400 font-medium">Nairobi, Kenya</p>
                    <p class="text-gray-400 text-sm mt-1">
                      Open to remote work worldwide
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Social Links -->
            <div
              class="bg-white/5 backdrop-blur-lg rounded-3xl p-8 border border-white/10 shadow-2xl"
            >
              <h3 class="text-white text-2xl font-bold mb-8">Follow me</h3>
              <div class="grid grid-cols-2 gap-4">
                <a
                  href="https://github.com/gideonmaina"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center space-x-3 p-4 bg-white/5 rounded-2xl hover:bg-white/10 transition-all duration-300 group border border-white/10 hover:border-white/20"
                  data-aos="fade-up"
                  data-aos-delay="550"
                  data-aos-duration="600"
                >
                  <svg
                    class="w-6 h-6 text-gray-400 group-hover:text-white transition-colors"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
